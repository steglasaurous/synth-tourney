    entity User {
        * id : int <<generated>>
    }

    entity UserAuth {
        * user_auth_source_id : int <<FK>>
        * user_id : int <<FK>>
        * auth_info : text
    }

    entity UserAuthSource {
        * id : int <<generated>>
        * name : varchar
    }

    entity Map {
        * id : int <<generated>>
        * map_id : varchar
        * title : varchar
        * artist : varchar
        * mapper : varchar
    }

    entity Tournament {
        * id : int <<generated>>
