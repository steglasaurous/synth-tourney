    }

    entity ScoreSubmission {
        * id : int <<generated>>
        * user_id : int <<FK>>
        * submitted_on : timestamp
        * play_instance_id : int <<FK>>
    }

    entity Score {
        * id : int <<generated>>
        * score_submission_id : int <<FK>>
        * player_name : varchar
        * score : int
        * total_notes : int
        * total_notes_hit : int
        * perfect_hits : int
